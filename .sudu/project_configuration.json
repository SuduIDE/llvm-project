{
  "configurations": [
    {
      "language": "c++",
      "defaultProfile": "Release",
      "defaultProjectModelConfiguration": {
        "command": {
          "workingDirectory": "build",
          "command": "cmake",
          "arguments": [
            "-GNinja",
            "-DCMAKE_BUILD_TYPE=Release",
            "-DCMAKE_EXPORT_COMPILE_COMMANDS=ON",
            "-S ../llvm"
          ]
        },
        "dockerContainer": {
          "image": "cpp-build-tool-worker",
          "cpus": 16.0,
          "memory": "16G"
        },
        "artifacts": [],
        "compileCommandsLocation": "build/compile_commands.json"
      },
      "defaultCodeModelConfiguration": {
        "indexAllSymbols": false,
        "numberOfIndexingThreads": 32,
        "dockerContainer": {
          "image": "clangd-indexer-worker",
          "cpus": 16.0,
          "memory": "16G"
        }
      },
      "compilationProfiles": [
        {
          "name": "Release",
          "description": "",
          "projectModelConfiguration": {
            "command": {
              "workingDirectory": "build",
              "command": "sh",
              "arguments": [
                "../.sudu/projectModel/build_project.sh",
                "Release"
              ]
            },
            "dockerContainer": {
              "image": "cpp-build-tool-worker",
              "cpus": 16.0,
              "memory": "16G"
            },
            "artifacts": ["build"],
            "compileCommandsLocation": "build/compile_commands.json"
          }
        }
      ]
    }
  ]
}
